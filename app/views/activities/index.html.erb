<h2>This is the index page for going to <%= @location %></h2>

<div class = "shadow border" style="width: 100%; height: 400px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<% @activities.each do |a| %>
  <div class = "bg-white shadow border m-3 p-3">
    <%= cl_image_tag a.photo.blobs[0].key, width: 400, height: 300, crop: :fill %>
    <h4><%= a.name %></h4>
    <p><%= a.description %></p>
    <p><%= a.price %></p>
    <p><%= link_to "See details", activity_path(start_date: @start_date, end_date: @end_date, id: a.id, location: @location, day_date: @day_date) %>
    <%= link_to "Add them to the valise", intermediaire_path(start_date: @start_date, end_date: @end_date, activity_id: a.id)%>
  </div>
<% end %>

<%= link_to "Back to home page", root_path %>
